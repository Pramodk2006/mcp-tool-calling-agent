# Environment Configuration for MCP Tool-Calling Agent
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Database Configuration (if using PostgreSQL in future)
POSTGRES_PASSWORD=changeme_secure_password

# Security Settings
SECRET_KEY=your_super_secret_key_here_change_in_production

# File Upload Settings
MAX_UPLOAD_SIZE=50MB
UPLOAD_DIR=uploads

# Tool Configuration
SEARCH_TOOL_ENABLED=true
CALCULATOR_TOOL_ENABLED=true
PDF_SUMMARIZER_TOOL_ENABLED=true
WEATHER_TOOL_ENABLED=true
RAG_TOOL_ENABLED=true
SYSTEM_TOOL_ENABLED=true

# RAG Configuration
RAG_INDEX_PATH=rag_index
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# Agent Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
AGENT_TIMEOUT=300

# Development Settings
DEBUG=false
RELOAD=false

# Logging Configuration
LOG_DIR=logs
LOG_FILE=mcp_agent.log
LOG_ROTATION=1 week
LOG_RETENTION=30 days